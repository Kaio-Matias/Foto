<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Foto</title>
    <!-- Incluindo Google Fonts diretamente no head -->
    <link href="https://fonts.googleapis.com/css2?family=KoPub+Batang:wght@400;700&display=swap" rel="stylesheet">
    <!-- Estilos e recursos -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Estilo personalizado do menu */
        .navbar-custom {
            background-color: #D1C6B4; /* Cor do menu personalizado */
            font-family: 'KoPub Batang', serif; /* Fonte personalizada */
            font-size: 16px; /* Tamanho da fonte */
        }

            .navbar-custom .nav-link {
                color: #000; /* Texto preto */
            }

                .navbar-custom .nav-link:hover {
                    color: #555; /* Tom mais escuro no hover */
                }

            /* Centralização do menu */
            .navbar-custom .navbar-nav {
                margin: auto;
            }

        /* Rodapé personalizado */
        footer {
            background-color: #F8F9FA;
            color: #000;
            text-align: center;
            padding: 20px 0;
            font-family: 'KoPub Batang', serif; /* Fonte personalizada */
            font-size: 16px; /* Tamanho da fonte */
            padding-left: 15px;
        }

            footer a {
                color: #000;
                text-decoration: none;
            }

                footer a:hover {
                    color: #555;
                }
    </style>
</head>
<body>
    <header>
        <!-- Barra de Navegação -->
        <nav class="navbar navbar-expand-sm navbar-custom navbar-light border-bottom mb-3">
            <div class="container">
                <!-- Botão para mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Alternar Navegação">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links de navegação -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Inicio">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Galeria">Galeria</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Sobre-mim">Sobre Mim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Loja">Loja</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Contato">Contato</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Conteúdo principal -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Renderiza o conteúdo específico de cada página -->
        </main>
    </div>

    <!-- Rodapé -->
    <footer class="border-top">
        <div class="container">
            &copy; 2024 Foto | Desenvolvido por Kaio |
            <a asp-page="/Privacy">Política de Privacidade</a>
        </div>
    </footer>

    <!-- Scripts necessários -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>